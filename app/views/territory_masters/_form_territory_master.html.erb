<%= form_with model: @territory_master, local: true do |form| %>
  <div class="container-fluid">
    <div class="card mt-4 w-75 mx-auto">
      <div class="card-header text-center">
        Territories
      </div>
      <div class="card-body">
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :territory_name, "Territory name *".html_safe %>
            <%= form.text_field :territory_name, id: 'territory_name', class: 'form-control', style: "width: 76%;" %>
            
            <% if @territory_master.errors[:territory_name].any? %>
              <div class="error-message text-danger" id="territory_name_error">
                <%= @territory_master.errors[:territory_name].join(", ") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :territory_description %>
            <%= form.text_field :territory_description, class: 'form-control', style: "width: 76%;" %>
          </div>
        </div>
      </div>
      <div class="card-footer text-center">
        <span><%= link_to 'Back', territory_masters_path, class: 'btn btn-secondary text-white text-decoration-none custom-hover-btn' %></span>
        <%= form.submit class: 'subbtn' %>
      </div>
    </div>
  </div>
<% end %>
