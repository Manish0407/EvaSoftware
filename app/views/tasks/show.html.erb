<div class="card">
  <div class="card-header">
    <h2><%= @task.task_title %></h2>
    <span class="col-2 text-end"><%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary float-end' %></span>
  </div>
  <div class="card-body">
    <p><strong>Employee Name:</strong> <%= @task.employee.full_name %></p>
    <p><strong>Task Medium:</strong> <%= @task.task_medium %></p>
    <p><strong>Schedule:</strong> <%= @task.schedule %></p>
    <p><strong>Status:</strong> <%= @task.status %></p>
    <p><strong>Description:</strong> <%= @task.task_description %></p>
    <p><strong>Opportunity ID:</strong> <%= @task.opportunity.project_name %></p>
    <p><strong>Opportunity Stage:</strong> <%= @task.opportunity_stage %></p>
    <p><strong>Contact Name:</strong> <%= @task.contact.full_name %></p>
    <%= link_to 'Back', tasks_path, class: 'btn btn-secondary' %>
  </div>
</div>
