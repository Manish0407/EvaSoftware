<div class="container-fluid" style="margin-bottom: 309px;">
  <div class="row">
    <h4 class="text-left col-10">Tasks</h4>
    <span class="col-2 text-end"><%= link_to 'New Task', new_task_path, class: 'btn btn-primary text-decoration-none text-white' %></span>
  </div>

  <nav class="navbar navbar-light bg-light justify-content-end mt-4">
    <%= form_with(url: tasks_path, method: :get, local: true, class: 'form-inline d-flex') do %>
      <input class="form-control mr-2" type="search" name="search" placeholder="Search" aria-label="Search" value="<%= params[:search] %>">
      <button class="btn btn-outline-success" type="submit">Search</button>
    <% end %>
  </nav>

  <ul class="nav nav-tabs mt-4 border-0">
    <li class="nav-item">
      <a class="nav-link active text-decoration-none" data-toggle="tab" href="#all">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-decoration-none" data-toggle="tab" href="#upcoming">Upcoming</a>
    </li>
    <li class="nav-item">
      <a class="nav-link text-decoration-none" data-toggle="tab" href="#completed">Completed</a>
    </li>
  </ul>

  <div class="tab-content mt-3 border-0">
    <div class="tab-pane fade show active" id="all">
      <h5>All Tasks</h5>
      <%= render partial: 'tasks_table', locals: { tasks: @tasks } %>
    </div>
    <div class="tab-pane fade" id="upcoming">
      <h5>Upcoming Tasks</h5>
      <%= render partial: 'tasks_table', locals: { tasks: @upcoming_tasks } %>
    </div>
    <div class="tab-pane fade" id="completed">
      <h5>Completed Tasks</h5>
      <%= render partial: 'tasks_table', locals: { tasks: @completed_tasks } %>
    </div>
  </div>
</div>
