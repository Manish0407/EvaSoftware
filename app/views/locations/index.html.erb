<div class="container-fluid" style="margin-bottom: 309px; margin-top: inherit;">
  <div class="row">
    <h3 class="text-left col-10">Location</h3>
    <span class="col-2 text-end"><%= link_to 'Add location', new_location_path, class: 'btn btn-primary text-decoration-none text-white' %></span>
  </div>
  <div class="container card mt-4" style="border: none;">
    <div class="card-body">
      <div class="table-responsive" style="overflow: hidden;">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>City name</th>
              <th>State name</th>
              <th>Country name</th>
              <th>Location code</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @locations.each do |location| %>
              <tr>
                <td><%= location.city %></td>
                <td><%= location.state %></td>
                <td><%= location.country %></td>
                <td><%= location.location_code %></td>
                <td class="position-relative">
                  <div class="dropdown dropup">
                    <button class="btn btn-sm dropdown-toggle" type="button" id="actionMenu<%= location.id %>" data-bs-toggle="dropdown" aria-expanded="false" style="background: aliceblue; border-radius: 50%;">
                      &#x22EE;
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><%= link_to 'Edit', edit_location_path(location), class: 'dropdown-item text-decoration-none' %></li>
                      <li><%= link_to 'Delete', location_path(location), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item text-decoration-none' %></li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
</div>
