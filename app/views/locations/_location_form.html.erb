<%= form_with model: @location, local: true do |form| %>
  <div class="container-fluid">
    <div class="card mt-4 w-75 mx-auto">
      <div class="card-header text-center">
        Location Details
      </div>
      <div class="card-body">
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :city, "City name *".html_safe %>
            <%= form.text_field :city, class: 'form-control',id: 'city', style: "width: 76%;" %>

            <% if @location.errors[:city].any? %>
              <div class="error-message text-danger" id="city_error">
                <%= @location.errors[:city].join(", ") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :state, "State name *".html_safe %>
            <%= form.text_field :state, class: 'form-control', id: 'state', style: "width: 76%;" %>

            <% if @location.errors[:state].any? %>
              <div class="error-message text-danger" id="state_error">
                <%= @location.errors[:state].join(", ") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :country, "Country name *".html_safe %>
            <%= form.text_field :country, class: 'form-control', id: 'country' %>

            <% if @location.errors[:country].any? %>
              <div class="error-message text-danger" id="country_error">
                <%= @location.errors[:country].join(", ") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :location_code %>
            <%= form.text_field :location_code, class: 'form-control', style: "width: 76%;" %>
          </div>
        </div>
      </div>
      <div class="card-footer text-center">
        <span><%= link_to 'Back', locations_path, class: 'btn btn-secondary text-white text-decoration-none custom-hover-btn' %></span>
        <%= form.submit class: 'subbtn' %>
      </div>
    </div>
  </div>
<% end %>

