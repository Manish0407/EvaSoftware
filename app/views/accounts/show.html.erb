<div class="card" style="margin-bottom: 260px;">
  <div class="card-header">
    <h3><%= @account.account_name %></h3>
  </div>
  <div class="card-body">
    <p><strong>Email:</strong> <%= @account.email %></p>
    <% employee = Employee.find_by(id: @account.employee_id) %>
    <p><strong>Managed by:</strong> <%= employee.present? ? employee.full_name : "Unknown Employee" %></p>
    <p><strong>GST Number:</strong> <%= @account.gst_number %></p>
    <p><strong>Website:</strong> <%= @account.website %></p>
    <p><strong>External Account Code:</strong> <%= @account.external_account_code %></p>
    <p><strong>Remark:</strong> <%= @account.remark %></p>
    <p><strong>Phone Number:</strong> <%= @account.phone_number %></p>
    <p><strong>Address 1:</strong> <%= @account.address1 %></p>
    <p><strong>Address 2:</strong> <%= @account.address2 %></p>
    <p><strong>Zip Code:</strong> <%= @account.zip_code %></p>
    <p><strong>City:</strong> <%= @account.city %></p>
    <p><strong>State:</strong> <%= @account.state %></p>
    <p><strong>Country:</strong> <%= @account.country %></p>
  </div>
  <div class="card-footer"><%= link_to 'Back', accounts_path, class: 'btn btn-sm btn-secondary text-decoration-none text-white' %></div>
</div>