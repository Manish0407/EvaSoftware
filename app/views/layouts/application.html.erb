  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


  <body>
    <% if controller_name != "window_doors" %>
      <div class="zoom-out">
        <% unless controller_name == 'sessions' && action_name == 'new' || controller_name == 'registrations' && action_name == 'new' || controller_name == 'password' && action_name == 'new' || action_name == 'create' %>
          <%= render 'shared/navbar' %>
          <div class="d-flex">
            <%= render 'shared/sidebar' %>
            <div class="container-fluid" style="margin-top: 40px; margin-left: 80px;">
              <%= yield %>
            </div>
          </div>
        <% else %>
          <div class="container-fluid" style="margin-top: 40px;  margin-left: 80px;">
            <%= yield %>
          </div>
        <% end %>
      </div>
    <% else %>
        <%= yield %>
    <% end %>
  </body>
</html>
