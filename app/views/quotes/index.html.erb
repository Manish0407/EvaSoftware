<div class="container-fluid pt-5 mt-4 mb-5">
  <div class="d-flex justify-content-between align-items-center">
    <h3 class="mb-0">Quotes</h3>
    <%= link_to 'New Quote', new_quote_path, class: 'btn btn-primary' %>
  </div>

  <nav class="navbar navbar-light bg-light justify-content-end mt-4">
    <%= form_with(url: opportunities_path, method: :get, local: true, class: 'form-inline d-flex') do %>
      <input class="form-control mr-2" type="search" name="search" placeholder="Search" aria-label="Search" value="<%= params[:search] %>">
      <button class="btn btn-outline-success" type="submit">Search</button>
    <% end %>
  </nav>

  <div class="card mt-4" style="border: none;">
    <div class="card-body">
      <div class="table-responsive" style="overflow: hidden;">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Project name</th>
              <th>Contact name</th>
              <th>Created by</th>
              <th>Location</th>
              <th>Deal stage</th>
              <th>Area</th>
              <th>Price</th>
              <th>View design</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @quotes.each do |quote| %>
              <% oprty = Opportunity.find_by(id: quote.opportunity_id) %>
              <tr>
                <td><%= oprty.present? ? oprty.project_name : "" %></td>
                <td><%= oprty.present? ? oprty.full_name : "" %></td>
                <td><%= quote.created_at.strftime("%B %d, %Y %I:%M %p") %></td>
                <td><%= oprty.present? ? oprty.city : "" %></td>
                <td><%= oprty.present? ? oprty.opportunity_stage : "" %></td>
                <td><%= quote.area %></td>
                <td>â‚¹<%= number_to_currency(quote.price, unit: '', delimiter: ',', precision: 2) %></td>
                <td>
                  <%= link_to 'Show', '/window_doors', class: 'btn btn-sm btn-info text-decoration-none text-white' %>
                </td>
                <td class="position-relative">
                  <div class="dropdown dropup">
                    <button class="btn btn-sm dropdown-toggle" type="button" id="actionMenu<%= quote.id %>" data-bs-toggle="dropdown" aria-expanded="false" style="background: aliceblue; border-radius: 50%;">
                      &#x22EE;
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><%= link_to 'Add task', new_task_path, class: 'dropdown-item text-decoration-none' %></li>
                      <li><%= link_to 'Edit', edit_quote_path(quote), class: 'dropdown-item text-decoration-none' %></li>
                      <li><%= link_to 'Delete', quote_path(quote), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item text-decoration-none' %></li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
</div>
