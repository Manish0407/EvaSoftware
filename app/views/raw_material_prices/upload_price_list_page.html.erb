<h3>Upload Raw Material Prices</h3>

<%= form_with url: upload_price_list_raw_material_prices_path, method: :post, local: true, multipart: true do |form| %>
  <div class="form-group">
    <%= form.label :price_file, "Select File to Upload:" %>
    <%= form.file_field :price_file, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Upload File", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back to List', settings_path, class: "btn btn-secondary" %>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
