<div class="container-fluid" style="margin-bottom: 309px; margin-top: inherit;">
  <div class="row">
    <h3 class="text-left col-10">Sales Office</h3>
    <span class="col-2 text-end"><%= link_to 'Add sales office', new_sales_office_path, class: 'btn btn-primary text-decoration-none text-white' %></span>
  </div>
  <div class="container card mt-4" style="border: none;">
    <div class="card-body">
      <div class="table-responsive" style="overflow: hidden;">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% @sales_offices.each do |sales_office_name| %>
              <tr>
                <td><%= sales_office_name.sales_office_name %></td>
                <td><%= sales_office_name.sales_description %></td>
                <td class="position-relative">
                  <div class="dropdown dropup">
                    <button class="btn btn-sm dropdown-toggle" type="button" id="actionMenu<%= sales_office_name.id %>" data-bs-toggle="dropdown" aria-expanded="false" style="background: aliceblue; border-radius: 50%;">
                      &#x22EE;
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                      <li><%= link_to 'Edit', edit_sales_office_path(sales_office_name), class: 'dropdown-item text-decoration-none' %></li>
                      <li><%= link_to 'Delete', sales_office_path(sales_office_name), method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item text-decoration-none' %></li>
                    </ul>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div> 
</div>
