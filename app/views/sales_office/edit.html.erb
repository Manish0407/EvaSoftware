<%= form_with model: @sales_office, local: true do |form| %>
  <div class="container-fluid">
    <div class="card mt-4 w-75 mx-auto">
      <div class="card-header text-center">
        Territories
      </div>
      <div class="card-body">
        <div class="form-row">
          <div class="form-group col-md-6">
            <%= form.label :sales_office_name, "Sales office name *".html_safe %>
            <%= form.text_field :sales_office_name, id: 'sales_office_name', class: 'form-control', style: "width: 76%;" %>
            
            <% if @sales_office.errors[:sales_office_name].any? %>
              <div class="error-message text-danger" id="sales_office_name_error">
                <%= @sales_office.errors[:sales_office_name].join(", ") %>
              </div>
            <% end %>
          </div>
          <div class="form-group col-md-6">
            <%= form.label :Description %>
            <%= form.text_field :sales_description, class: 'form-control', style: "width: 76%;" %>
          </div>
        </div>
      </div>
      <div class="card-footer text-center">
        <span><%= link_to 'Back', sales_office_index_path, class: 'btn btn-secondary text-white text-decoration-none custom-hover-btn' %></span>
        <%= form.submit class: 'subbtn' %>
      </div>
    </div>
  </div>
<% end %>
